{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "skipLibCheck": true,

    // ✅ Node.js settings
    "lib": ["ESNext"],
    "types": ["node"],

    // ✅ Optional but helpful
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["server.ts"]
}
